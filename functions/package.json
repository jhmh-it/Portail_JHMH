  "dependencies": {
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.17.16",
    "typescript": "^5.7.3"
  },
  "private": true
