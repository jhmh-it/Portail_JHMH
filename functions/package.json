{
  "name": "functions",
  "version": "2.0.0",
  "description": "Cloud Functions Firebase pour la restriction d'authentification JHMH (Node.js/TypeScript)",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
