    "lint": "echo '✅ Functions linting - à configurer avec ESLint plus tard'"
  },
  "engines": {
    "node": "20"
  },
  "keywords": [
    "firebase",
    "functions",
    "typescript",
    "authentication",
    "jhmh"
  ],
  "author": "JHMH",
