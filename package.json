{
  "name": "portail_jhmh",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "npm run lint && npm run type-check && echo '✅ Basic quality checks passed - add unit tests here later'",
    "test:ci": "npm run test && npm run build",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "test:build": "npm run build && echo '✅ Build test successful'",
    "test:all": "npm run lint && npm run type-check && npm run test:build",
    "validate:pre-deploy": "npm run test:all && echo '🎉 Ready for deployment!'",
    "validate:security": "npm audit --audit-level=moderate",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "setup:dev": "npm install",
    "setup:hooks": "husky install && chmod +x .husky/pre-commit",
    "status": "echo '📊 Project Status:' && npm run lint --silent && npm run type-check --silent && echo '✅ All checks passed'",
    "workflow:pr": "npm run lint:fix && npm run format && npm run type-check && npm run build",
    "workflow:hotfix": "npm run lint:fix && npm run type-check && npm run build && echo '🔥 Hotfix ready'"
  },
